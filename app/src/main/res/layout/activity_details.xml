<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"

    android:padding="8dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Магазин продуктов"
        app:titleTextColor="@color/white"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageButton
            android:id="@+id/detailsActivityExitButtonBTN"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_exit_24"
            android:background="@null"
            android:layout_marginEnd="8dp">

        </ImageButton>



    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/detailsActivityNameProductTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наименование продукта"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="27dp"

        />

    <ImageView
        android:id="@+id/detailsActivityImageProductIV"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/baseline_person_24"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/detailsActivityPriceProductTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/detailsActivityDescriptionProductTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
         />
</LinearLayout>